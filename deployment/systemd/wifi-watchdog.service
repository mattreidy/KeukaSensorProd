[Unit]
Description=WiFi Watchdog Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/KeukaSensorProd
ExecStart=/bin/bash /home/pi/KeukaSensorProd/deployment/scripts/wifi_monitor.sh
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
